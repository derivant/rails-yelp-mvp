  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.rating %></p>
  <p><%= @restaurant.phone_number %></p>

<h3>Reviews</h3>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-success" %>

<% if @restaurant.reviews.empty? %>
  <h4>Be first to add your review</h4>
<% else %>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.content %>
      </li>
    <% end %>
  </ul>
<% end %>
